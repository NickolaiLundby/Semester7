extends default

block auth
    form.form-signin(action="/users/create", method="post", role="form")
        input(type="hidden")

        .form-label-group
            input#name.form-control(type='name' name='name' placeholder='Your full name' required='' autofocus='' value=user.name)
            label(for='name') Full name
        .form-label-group
            input#username.form-control(type='username' name='username' placeholder='Your username' required='' value=user.username)
            label(for='username') Username
        .form-label-group
            input#email.form-control(type='email' name='email' placeholder='Your email address' required='' value=user.email)
            label(for='email') Email address
        .form-label-group
            input#password.form-control(type='password' name='password' placeholder='Your password' required='')
            label(for='password') Password
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
        .my-3.text-center
            | OR
            a.show-signup(href="/users/login") Log in